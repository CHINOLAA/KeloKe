<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_item_layout"
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/album_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" />

        <TextView
            android:id="@+id/song_name_text_view"
            style="@style/SongTextView"
            android:layout_below="@id/album_icon"
            android:paddingTop="@dimen/top_margin"
            android:paddingBottom="@dimen/elevation" />

        <TextView
            android:id="@+id/artist_text_view"
            style="@style/SongTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_name_text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="@dimen/elevation"
            android:paddingBottom="@dimen/play_top_margin" />

    </RelativeLayout>
</LinearLayout>